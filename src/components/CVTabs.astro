---
const { translations, currentLang } = Astro.props;
const t = translations[currentLang];
const cvData = t.cv;
---

<div class="cv-section">
  <div class="cv-tabs">
    <button class="cv-tab active" data-tab="general">{cvData.tabs.general.title}</button>
    <button class="cv-tab" data-tab="filmtv">{cvData.tabs.filmtv.title}</button>
    <button class="cv-tab" data-tab="theatre">{cvData.tabs.theatre.title}</button>
    <button class="cv-tab" data-tab="education">{cvData.tabs.education.title}</button>
  </div>

  <!-- General Info Tab -->
  <div class="cv-content active" data-content="general">
    <div class="cv-info-grid">
      <p><strong>{cvData.tabs.general.languages}</strong></p>
      <p><strong>{cvData.tabs.general.height}</strong></p>
      <p><strong>{cvData.tabs.general.build}</strong></p>
      <p><strong>{cvData.tabs.general.voiceType}</strong></p>
      <p><strong>{cvData.tabs.general.skills}</strong></p>
    </div>
  </div>

  <!-- Film/TV Tab -->
  <div class="cv-content" data-content="filmtv">
    <div class="cv-credits">
      {cvData.tabs.filmtv.credits && cvData.tabs.filmtv.credits.map((credit) => (
        <div class="credit-item">
          <div class="credit-role">{credit.role}</div>
          <div class="credit-project">{credit.project}</div>
          <div class="credit-meta">
            {credit.year} | {credit.director}
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Theatre Tab -->
  <div class="cv-content" data-content="theatre">
    <div class="cv-credits">
      {cvData.tabs.theatre.credits && cvData.tabs.theatre.credits.map((credit) => (
        <div class="credit-item">
          <div class="credit-role">{credit.role}</div>
          <div class="credit-project">{credit.project}</div>
          <div class="credit-meta">
            {credit.year} | {credit.director}
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Education Tab -->
  <div class="cv-content" data-content="education">
    <div class="cv-credits">
      {cvData.tabs.education.items && cvData.tabs.education.items.map((item) => (
        <div class="credit-item">
          <div class="credit-role">{item.name}</div>
          <div class="credit-project">{item.institution}</div>
          <div class="credit-meta">{item.year}</div>
        </div>
      ))}
    </div>
  </div>

  <!-- Download Button -->
  <div class="cv-download">
    <a href={cvData.downloadUrl} class="download-button" download>
      {cvData.downloadLabel}
    </a>
  </div>
</div>

<style>
  .cv-info-grid {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .cv-credits {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .credit-item {
    padding: var(--spacing-md);
    background: rgba(255, 255, 255, 0.4);
    border-radius: var(--border-radius);
    border: 1px solid var(--color-border);
    transition: all var(--transition);
  }

  .credit-item:hover {
    border-color: var(--color-accent);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .credit-role {
    font-weight: 700;
    font-size: 18px;
    color: var(--color-text);
    margin-bottom: 4px;
  }

  .credit-project {
    font-size: 16px;
    color: var(--color-text-muted);
    margin-bottom: 4px;
  }

  .credit-meta {
    font-size: 14px;
    color: var(--color-accent);
  }
</style>

<script>
  function initCVTabs() {
    const tabs = document.querySelectorAll('.cv-tab');
    const contents = document.querySelectorAll('.cv-content');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const tabName = tab.getAttribute('data-tab');

        // Update active tab
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');

        // Show corresponding content
        contents.forEach(content => {
          const contentName = content.getAttribute('data-content');
          content.classList.toggle('active', contentName === tabName);
        });
      });
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCVTabs);
  } else {
    initCVTabs();
  }

  // Re-initialize when language changes
  window.updateCVTabs = initCVTabs;
</script>
