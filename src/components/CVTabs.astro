---
const { translations, currentLang } = Astro.props;
const t = translations[currentLang];
const cvData = t.cv;
---

<div class="cv-section">
  <div class="cv-tabs">
    <button class="cv-tab active" data-tab="general">{cvData.tabs.general.title}</button>
    <button class="cv-tab" data-tab="filmtv">{cvData.tabs.filmtv.title}</button>
    <button class="cv-tab" data-tab="theatre">{cvData.tabs.theatre.title}</button>
    <button class="cv-tab" data-tab="education">{cvData.tabs.education.title}</button>
  </div>

  <!-- General Info Tab -->
  <div class="cv-content active" data-content="general">
    <div class="cv-info-grid">
      <p>{cvData.tabs.general.languages}</p>
      <p>{cvData.tabs.general.height}</p>
      {cvData.tabs.general.eyes && <p>{cvData.tabs.general.eyes}</p>}
      {cvData.tabs.general.hair && <p>{cvData.tabs.general.hair}</p>}
      {cvData.tabs.general.build && <p>{cvData.tabs.general.build}</p>}
      <p>{cvData.tabs.general.voiceType}</p>
      <p>{cvData.tabs.general.skills}</p>
    </div>
  </div>

  <!-- Film/TV Tab -->
  <div class="cv-content" data-content="filmtv">
    <div class="cv-list">
      {cvData.tabs.filmtv.credits && cvData.tabs.filmtv.credits.map((credit) => (
        <div class="cv-list-item">
          <div class="cv-list-main">
            <span class="cv-year">{credit.year}</span>
            <strong>{credit.project}</strong> – {credit.role}
            {credit.director && <span class="cv-meta"> | {credit.director}</span>}
          </div>
          {credit.production && <div class="cv-list-sub">{credit.production}</div>}
        </div>
      ))}
    </div>
  </div>

  <!-- Theatre Tab -->
  <div class="cv-content" data-content="theatre">
    <div class="cv-list">
      {cvData.tabs.theatre.credits && cvData.tabs.theatre.credits.map((credit) => (
        <div class="cv-list-item">
          <div class="cv-list-main">
            <span class="cv-year">{credit.year}</span>
            <strong>{credit.project}</strong> – {credit.role}
            {credit.director && <span class="cv-meta"> | {credit.director}</span>}
          </div>
          {credit.venue && <div class="cv-list-sub">{credit.venue}</div>}
        </div>
      ))}
    </div>
  </div>

  <!-- Education Tab -->
  <div class="cv-content" data-content="education">
    <div class="cv-list">
      {cvData.tabs.education.items && cvData.tabs.education.items.map((item) => (
        <div class="cv-list-item">
          <div class="cv-list-main">
            <span class="cv-year">{item.year}</span>
            <strong>{item.name}</strong>
          </div>
          <div class="cv-list-sub">{item.institution}</div>
        </div>
      ))}
    </div>
  </div>

  <!-- Download Button -->
  <div class="cv-download">
    <a href={cvData.downloadUrl} class="download-button" download>
      {cvData.downloadLabel}
    </a>
  </div>
</div>

<style>
  .cv-info-grid {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .cv-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .cv-list-item {
    padding: var(--spacing-xs) 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    line-height: 1.4;
  }

  .cv-list-item:last-child {
    border-bottom: none;
  }

  .cv-list-main {
    font-size: 15px;
    color: var(--color-text);
  }

  .cv-year {
    display: inline-block;
    min-width: 75px;
    font-weight: 600;
    color: var(--color-accent);
    margin-right: 8px;
  }

  .cv-meta {
    color: var(--color-text-muted);
    font-weight: 400;
  }

  .cv-list-sub {
    font-size: 13px;
    color: var(--color-text-muted);
    padding-left: 83px;
    font-style: italic;
    margin-top: 2px;
  }
</style>

<script>
  function initCVTabs() {
    const tabs = document.querySelectorAll('.cv-tab');
    const contents = document.querySelectorAll('.cv-content');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const tabName = tab.getAttribute('data-tab');

        // Update active tab
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');

        // Show corresponding content
        contents.forEach(content => {
          const contentName = content.getAttribute('data-content');
          content.classList.toggle('active', contentName === tabName);
        });
      });
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCVTabs);
  } else {
    initCVTabs();
  }

  // Re-initialize when language changes
  window.updateCVTabs = initCVTabs;
</script>
